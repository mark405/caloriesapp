<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Наскільки Ви активні?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Людина з малорухливим життям витрачає менше калорій"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Activity Level Buttons -->
    <Button
        android:id="@+id/inactiveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Неактивний"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/lowActivityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Низька активність"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/activeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Активний"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/veryActiveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дуже активний" />

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Далі"
        android:layout_marginTop="24dp" />
</LinearLayout>
